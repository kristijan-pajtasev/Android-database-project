<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/main_activity_padding">
    
    <EditText
        android:id="@+id/messageEditText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:lines="5"
        android:gravity="top|left"
        android:layout_marginBottom="10pt"/>

    <TextView
        android:id="@+id/idTextView"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/update_button_message_text"
            android:onClick="updateMessage"
            />

        <Button
            android:layout_width="dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/delete_button_message_text"
            android:onClick="deleteMessage"
            />
    </LinearLayout>
</LinearLayout>